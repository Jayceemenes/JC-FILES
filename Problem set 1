PROBLEM SET 1:

CREATE TABLE Adopters (   
    adopter_id INT PRIMARY KEY,   
    adopter_name VARCHAR(250),   
    email VARCHAR(250),   
    phone VARCHAR(15)  
)

INSERT INTO Adopters (adopter_id, adopter_name, email, phone) VALUES 
(1, 'Aliyah Vien', 'aliyah@gmail.com', '555-1234')

